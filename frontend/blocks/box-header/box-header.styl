.box-header
  display: inline-table
  width: 100%
  color: $font-color
  font-size: 40px
  align-items: center
  border-collapse: collapse
  padding: 0

.box-header .circle
    width: 70px
    height: 60px
    box-shadow: inset 0 0 0 2px white
    margin: 0 10px 0 0
    padding-top: 10px
    font-family: 'Glyphter'
    color: white
    vertical-align: middle

.header-logo
  display: table-cell
  vertical-align: middle
  width: 62px


.header-text
  display: table-cell
  width: 50px
  vertical-align: middle
  text-align: left


.header-line
  display: table-cell
  width: 100%
  margin: 0
  height: 70px
