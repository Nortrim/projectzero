.box-header
  display: inline-table
  width: 100%
  color: $font-color
  font-size: 39px
  border-collapse: collapse
  text-transform upper-case

.box-header .circle
    width: 72px
    height: 57px
    box-shadow: inset 0 0 0 3px white
    margin: 0 10px 0 1px
    padding-top: 13px
    font-family: 'Glyphter'
    color: white
    vertical-align: middle

.header-logo
  display: table-cell
  vertical-align: middle
  width: 62px


.header-text
  display: table-cell
  vertical-align: middle
  font-weight: 900
  letter-spacing: 3px

.right .header-text
  padding-left 1.5%

.header-line
  display: table-cell
  width: 100%
  margin: 0
  height: 70px
