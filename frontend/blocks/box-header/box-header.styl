.box-header
  display: inline-table
  width: 100%
  color: $font-color
  font-size: 39px
  border-collapse: collapse
  text-transform upper-case

.box-header__circle
    border-radius: 50%
    background-color: $font-color
    border: 1px solid $font-color
    width: 72px
    height: 57px
    box-shadow: inset 0 0 0 3px white
    margin: 0 10px 0 1px
    padding-top: 13px
    font-family: 'Glyphter'
    color: white
    vertical-align: middle

.box-header__logo
  display: table-cell
  vertical-align: middle
  width: 62px


.box-header__text
  display: table-cell
  vertical-align: middle
  font-weight: 900
  letter-spacing: 3px

.right .box-header__text
  padding-left 1.5%

.box-header__line
  display: table-cell
  width: 100%
  margin: 0
  height: 70px
