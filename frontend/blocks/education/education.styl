//education.styl
.list
  font-size 14px
  list-style: none
  text-align: left

.list_education
  margin 22px 0 0 16px
  padding-bottom 60px

.list__point::before
  position: absolute
  content: ''
  border-radius: 50%
  height: 20px
  width: 20px
  background: black
  transform: translate(-42px, 8px)

.list__point
  margin-bottom -10px

.list__header
  font-weight: lighter
  letter-spacing 1px
  line-height 33px
  margin-bottom 7px
  font-size 24px

.list__title_color_blue
  color: $font-color

.list__title_weight_bold
  font-weight: 900
  letter-spacing 1px

.list__paragraph
  margin 0
  line-height 18px
