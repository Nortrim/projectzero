body
    font: 16px 'MyriadProRegular' serif
.left
    display: flex
    flex-direction: column
    flex-basis: 400px
    height: 100%
    flex-grow: 1
    
.right
    flex-direction: column
    display: flex
    flex-basis: 500px
    height: 100%
    flex-grow: 5

.circle
    margin: 0 auto
    height: 230px
    width: 230px
    border-radius: 50%
    background-color: $font-color
    border: 1px solid $font-color
    box-shadow: inset 0 0 0 14px white

.container
    margin: auto
    margin-top: 87px
    display: flex
    flex-wrap: wrap
    min-width: 400px
    width: 85%
    height: 1200px

.content
    text-align: center
    padding: 0 10px
    min-width: 300px
    flex-grow: 1

p
    word-wrap: break-word
    text-align: left

.bolder
    font-weight: 900
